<Window x:Class="XmlApplication.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XmlApplication.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SaveXml" Content="Save XML" Command="{Binding Click_Save}" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="120" Height="35" Background="AliceBlue" RenderTransformOrigin="0.509,2.762"/>
        <Button x:Name="ReadXml" Content="Read XML" Command="{Binding Click_Read}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Height="35" Background="AliceBlue" RenderTransformOrigin="0.509,2.762"/>
    </Grid>
</Window>
